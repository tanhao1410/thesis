<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="DB2Tables" targetRuntime="MyBatis3">
        
        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin"></plugin>
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/school"
                        userId="root"
                        password="root">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.github.tanhao1410.thesis.management.domain" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.github.tanhao1410.thesis.management.mapper"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="alarm" domainObjectName="AlarmDO"/>

        <table tableName="device" domainObjectName="DeviceDO"/>

        <table tableName="group" domainObjectName="GroupDO"/>

        <table tableName="history_alarm" domainObjectName="HistoryAlarmDO"/>

        <table tableName="monitoring_data" domainObjectName="MonitoringDataDO"/>

        <table tableName="monitoring_item" domainObjectName="MonitoringItemDO"/>

        <table tableName="monitoring_rule" domainObjectName="MonitoringRuleDO"/>

        <table tableName="user" domainObjectName="UserDO"/>
        <table tableName="user_group" domainObjectName="UserGroupDO"/>

    </context>
</generatorConfiguration>